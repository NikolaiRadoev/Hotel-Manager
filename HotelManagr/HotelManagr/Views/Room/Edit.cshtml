@model HotelManagr.ViewModels.RoomViewModel.EditRoomViewModel
<main class="mt-3">
    <h1 class="text-center">Edit</h1>
    <hr class="bg-secondary half-width" />
    <form class="mx-auto half-width" method="post" asp-controller="Room" asp-action="Edit">
        <div class="form-group">
            <label asp-for="Capacity">Capacity</label>
            <input asp-for="Capacity" class="form-control" id="capacity" placeholder="Capacity...">
        </div>
        <div class="form-group">
            <label asp-for="RoomType">RoomType</label>
            <!--<label asp-for="FirstName" class="form-control" id="firstname" placeholder="Firstname...">-->
            <input asp-for="RoomType" class="form-control" id="roomtype" placeholder="RoomType...">
        </div>
        <div class="form-group">
            <label asp-for="FreeRoom">FreeRoom</label>
            <input asp-for="FreeRoom" class="form-control" id="freeroom" placeholder="FreeRoom...">
        </div>
        <div class="form-group">
            <label asp-for="PricePerAdult">PricePerAdult</label>
            <input asp-for="PricePerAdult" class="form-control" id="priceperadult" placeholder="PricePerAdult...">
        </div>
        <div class="form-group">
            <label asp-for="PricePerKid">PricePerKid</label>
            <input asp-for="PricePerKid" class="form-control" id="priceperkid" placeholder="PricePerKid...">
        </div>
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color">Edit</button><!--v toq klas btn chushka-bg-color mai trq da e po drug nachin-->
        </div>
    </form>

</main>
@model HotelManagr.ViewModels.UserViewModel.RegisterUserViewModel
<main class="mt-3">
    <h1 class="text-center">Register</h1>
    <hr class="bg-secondary half-width" />
    <form class="mx-auto half-width" method="post" asp-controller="User" asp-action="Register">
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" class="form-control" id="username" placeholder="Username...">
        </div>
        <div class="form-group">
            <label asp-for="FirstName">FirstName</label>
            <!--<label asp-for="FirstName" class="form-control" id="firstname" placeholder="Firstname...">-->
            <input asp-for="FirstName" class="form-control" id="firstname" placeholder="Firstname...">
        </div>
        <div class="form-group">
            <label asp-for="MiddleName">MiddleName</label>
            <input asp-for="MiddleName" class="form-control" id="middlename" placeholder="Middlename...">
        </div>
        <div class="form-group">
            <label asp-for="LastName">LastName</label>
            <input asp-for="LastName" class="form-control" id="lastname" placeholder="Lastname...">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" id="email" placeholder="Email..." name="email">
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" id="password" placeholder="Password..." name="password">
        </div>
        <div class="form-group">
            <label asp-for="PersonalNumber">PersonalNumber</label>
            <input asp-for="PersonalNumber" class="form-control" id="personalnumber" placeholder="PersonalNumber...">
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">PhoneNumber</label>
            <input asp-for="PhoneNumber" class="form-control" id="phonenumber" placeholder="Phonenumber...">
        </div>

        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color">Register</button><!--v toq klas btn chushka-bg-color mai trq da e po drug nachin-->
        </div>
    </form>

</main>
@using Microsoft.AspNetCore.Identity
@using HotelManagr.Data.Models_Entitys_
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@{
    ViewData["Title"] = "Home Page";
}


    <div class="text-center">

        @if (SignInManager.IsSignedIn(User))
        {
            <div>
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </div>

            @if (User.IsInRole("Admin"))
            { //poleta samo za admini
                <form class="form-inline" asp-controller="User" asp-action="Register">
                    <button type="submit" class="nav-link btn btn-link text-dark">Register new Employee</button>
                </form>
                <form class="form-inline" asp-controller="User" asp-action="All">
                    <button type="submit" class="nav-link btn btn-link text-dark">All Employee</button>
                </form>
 

                <form class="form-inline" asp-action="Register" asp-controller="Room">
                    <button type="submit" class="nav-link btn btn-link text-dark">Register new rooooooom</button>
                </form>
                <form class="form-inline" asp-controller="Room" asp-action="Edit">
                    <button type="submit" class="nav-link btn btn-link text-dark">Edit room</button>
                </form>
                <form class="form-inline" asp-controller="Room" asp-action="Delete">
                    <button type="submit" class="nav-link btn btn-link text-dark">Delete room</button>
                </form>

                /*<form class="form-inline" asp-controller="Client" asp-action="Register">
                   <button type="submit" class="nav-link btn btn-link text-dark">Register new Client</button>
                </form>
                <form class="form-inline" asp-controller="Client" asp-action="Edit">
                    <button type="submit" class="nav-link btn btn-link text-dark">Edit Client</button>
                </form> <form class="form-inline" asp-controller="Client" asp-action="Delete">
                    <button type="submit" class="nav-link btn btn-link text-dark">Delete Client</button>
                </form>*/

            }
            else
            {
                //poleta za user
            }
            //poleta i za user i admin
            <form class="form-inline" asp-controller="Client" asp-action="Register">
                <button type="submit" class="nav-link btn btn-link text-dark">Register new Client</button>
            </form>
            <form class="form-inline" asp-controller="Client" asp-action="Edit">
                <button type="submit" class="nav-link btn btn-link text-dark">Edit Client</button>
            </form> <form class="form-inline" asp-controller="Client" asp-action="Delete">
                <button type="submit" class="nav-link btn btn-link text-dark">Delete Client</button>
            </form>

            <div>
                <form class="form-inline" asp-controller="User" asp-action="LogOut">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </div>
        }
        else
        {
            <div>
                <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
            </div>
        }
    </div>